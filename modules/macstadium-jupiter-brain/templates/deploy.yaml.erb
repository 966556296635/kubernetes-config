---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%= name %>
  labels:
    app: jupiter-brain
    env: <%= env %>
spec:
  replicas: <%= replicas %>
  selector:
    matchLabels:
      app: jupiter-brain
      env: <%= env %>
  template:
    metadata:
      labels:
        app: jupiter-brain
        env: <%= env %>
        version: <%= version %>
    spec:
      containers:
      - name: <%= name %>
        image: travisci/jupiter-brain:<%= version %>
        env:
        - name: JUPITER_BRAIN_ADDR
          value: "0.0.0.0:8080"
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: JUPITER_BRAIN_LIBRATO_SOURCE
          value: $(POD_NAMESPACE)-$(POD_NAME)
        envFrom:
          - secretRef:
              name: <%= name %>
