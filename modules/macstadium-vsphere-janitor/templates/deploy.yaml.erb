---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%= name %>
  labels:
    app: vsphere-janitor
    env: <%= env %>
spec:
  selector:
    matchLabels:
      app: vsphere-janitor
      env: <%= env %>
  template:
    metadata:
      labels:
        app: vsphere-janitor
        env: <%= env %>
        version: <%= version %>
    spec:
      containers:
      - name: vsphere-janitor
        image: travisci/vsphere-janitor:<%= version %>
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: VSPHERE_JANITOR_LIBRATO_SOURCE
          value: $(POD_NAMESPACE)-$(POD_NAME)
        envFrom:
        - secretRef:
            name: <%= name %>
