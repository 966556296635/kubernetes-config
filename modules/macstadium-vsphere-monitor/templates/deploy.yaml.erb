---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%= name %>
  labels:
    app: vsphere-monitor
    env: <%= env %>
spec:
  selector:
    matchLabels:
      app: vsphere-monitor
      env: <%= env %>
  template:
    metadata:
      labels:
        app: vsphere-monitor
        env: <%= env %>
        version: <%= version %>
    spec:
      containers:
      - name: vsphere-monitor
        image: travisci/vsphere-monitor:<%= version %>
        envFrom:
        - secretRef:
            name: <%= name %>
